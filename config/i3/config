# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        verbose yes
        position top
        status_command status 
        font pango:monospace 10
        mode hide
        hidden_state hide
        modifier $mod
      #  tray_output primary
      colors {
        background #222222
      }
}
