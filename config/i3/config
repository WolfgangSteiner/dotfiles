# Media Keys
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +1db #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -1db #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle


