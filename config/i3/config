# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    verbose yes
    position top
    status_command ~/.dotfiles/bin/status 
    #font pango:monospace 14
    font pango:Cozette HiDPI 15
    mode hide
    hidden_state hide
    modifier $mod
    #tray_output primary
    colors {
        background #222222
    }
}
